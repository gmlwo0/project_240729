<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.project.post.mapper.PostMapper">
	<select id="testList" resultType="map">
		SELECT
			*
		FROM
			`post`
	</select>
	
	<insert id="insertPost" parameterType="map">
		INSERT INTO `post`
		(
			`userId`
			,`movieId`
			,`content`
			,`point`
			,`title`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{userId}
			,#{movieId}
			, #{content}
			, #{point}
			, #{title}
			, NOW()
			, NOW()
		)
	</insert>
	
	<select id="selectPostListByUserId" parameterType="int" resultType="com.project.post.domain.Post">
		SELECT
			`id`
			,`userId`
			,`movieId`
			,`content`
			,`point`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		WHERE
			`userId` = #{userId}
<!-- 			<if test="direction == 'next'">
			<![CDATA[
			AND `id` < #{standardId}
			]]>
			</if> -->
		ORDER BY `id` DESC
		LIMIT ${limit}
	</select>
	<select id="selectPostByPostIdUserId" parameterType="map" resultType="com.project.post.domain.Post">
		SELECT
			`id`
			,`userId`
			,`movieId`
			,`title`
			,`content`
			,`point`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		WHERE
			`userId` = #{userId}
			AND `id` = #{postId}
	</select>
 </mapper>